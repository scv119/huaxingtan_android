<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/detail_header_image"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/detail_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
 		android:gravity="center" 
        android:layout_toRightOf="@id/detail_header_image"
        android:text="123" />

    <TextView
        android:id="@+id/detail_header_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/detail_header_name"
        android:layout_toRightOf="@id/detail_header_image"
        android:layout_alignParentRight="true"
        android:gravity="center" 
        android:text="123" />

    <TextView
        android:id="@+id/detail_header_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="12dp"
        android:layout_marginTop="98dp"
        android:layout_marginRight="24dp"
        android:text="123" />

</RelativeLayout>
