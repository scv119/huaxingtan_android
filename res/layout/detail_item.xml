<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/detail_play_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:visibility="invisible"
        android:src="@drawable/playnow" />

    <TextView
        android:id="@+id/detail_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentLeft="true"
       	android:layout_alignParentTop="true"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
       	android:textSize="18dp"
        android:text="TextView" />
    
     <TextView
        android:id="@+id/detail_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentLeft="true"
       	android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="39dp"
       	android:textSize="12dp"
        android:text="TextView" />

     <ImageButton
        android:id="@+id/detail_item_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/download_selector"
        android:focusable="false"
        android:background="#00000000" />
     
     <ImageButton
        android:id="@+id/detail_finish_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/download_finish_selector"
        android:focusable="false"
        android:background="#00000000" />

     <TextView
         android:id="@+id/detial_button_text"
         android:layout_width="56dp"
         android:layout_height="13dp"
       	 android:layout_alignParentRight="true"
       	 android:layout_alignParentBottom="true"
       	 android:layout_marginBottom="2dp"
         android:layout_marginRight="0dp"
         android:text=""
         android:textColor="@android:color/black"
         android:textAlignment="center"
         android:textSize="10dp" />

</RelativeLayout>
